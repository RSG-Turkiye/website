---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CommitteeCard from '../../layouts/CommitteeCard.astro';
import { getCommittees } from '../../data/committees';
import { getLangFromUrl, useTranslations } from '../../i18n/ui';

const lang = 'tr';
const t = useTranslations(lang);
const pageTitle = "Hakkımızda - RSG Türkiye";

// Get committees data based on language
const committees = getCommittees(lang);
---

<BaseLayout pageTitle={pageTitle}>
  <!-- Hero Section -->
  <section class="hero text-center py-5">
    <div class="container">
      <div class="row align-items-center min-vh-50">
        <div class="col-lg-8 mx-auto">
          <h1 class="display-3 fw-bold mb-4">{t('about.title')}</h1>
          <p class="lead fs-4">
            {t('about.subtitle')}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Who We Are Section -->
  <section class="who-we-are py-5">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6">
          <h2 class="display-5 fw-bold mb-4">{t('about.whoWeAre.title')}</h2>
          <p class="lead mb-4">
            {t('about.whoWeAre.description')}
          </p>
          <p class="fs-5 mb-4">
            {t('about.whoWeAre.detail')}
          </p>
          <div class="d-flex align-items-center mb-3">
            <i class="fas fa-globe fa-2x text-primary me-3"></i>
            <div>
              <h5 class="mb-1">{t('about.affiliation.title')}</h5>
              <p class="text-muted mb-0">{t('about.affiliation.description')}</p>
            </div>
          </div>
          <div class="d-flex align-items-center mb-3">
            <i class="fas fa-users fa-2x text-primary me-3"></i>
            <div>
              <h5 class="mb-1">{t('about.community.title')}</h5>
              <p class="text-muted mb-0">{t('about.community.description')}</p>
            </div>
          </div>
          <div class="d-flex align-items-center">
            <i class="fas fa-dna fa-2x text-primary me-3"></i>
            <div>
              <h5 class="mb-1">{t('about.research.title')}</h5>
              <p class="text-muted mb-0">{t('about.research.description')}</p>
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="about-image text-center">
            <img src="/images/foraboutpage.jpeg" alt="RSG Turkey Community" class="img-fluid about-page-image" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- What We Do Section -->
  <section class="what-we-do py-5 bg-light">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto text-center mb-5">
          <h2 class="display-5 fw-bold mb-4">{t('about.whatWeDo.title')}</h2>
          <p class="lead">
            {t('about.whatWeDo.subtitle')}
          </p>
        </div>
      </div>
      <div class="row g-4">
        <div class="col-lg-4 col-md-6">
          <div class="activity-card h-100 p-4 text-center">
            <div class="activity-icon mb-3">
              <i class="fas fa-calendar-alt fa-3x text-primary"></i>
            </div>
            <h3 class="h4 mb-3">{t('about.symposiums.title')}</h3>
            <p class="text-muted">
              {t('about.symposiums.description')}
            </p>
          </div>
        </div>
        <div class="col-lg-4 col-md-6">
          <div class="activity-card h-100 p-4 text-center">
            <div class="activity-icon mb-3">
              <i class="fas fa-video fa-3x text-primary"></i>
            </div>
            <h3 class="h4 mb-3">{t('about.webinars.title')}</h3>
            <p class="text-muted">
              {t('about.webinars.description')}
            </p>
          </div>
        </div>
        <div class="col-lg-4 col-md-6">
          <div class="activity-card h-100 p-4 text-center">
            <div class="activity-icon mb-3">
              <i class="fas fa-chalkboard-teacher fa-3x text-primary"></i>
            </div>
            <h3 class="h4 mb-3">{t('about.presentations.title')}</h3>
            <p class="text-muted">
              {t('about.presentations.description')}
            </p>
          </div>
        </div>
        <div class="col-lg-4 col-md-6">
          <div class="activity-card h-100 p-4 text-center">
            <div class="activity-icon mb-3">
              <i class="fas fa-briefcase fa-3x text-primary"></i>
            </div>
            <h3 class="h4 mb-3">Kariyer Gelişimi</h3>
            <p class="text-muted">
              Öğrenciler ve erken kariyer araştırmacıları için eğitim ve iş fırsatlarını genişletmek üzere kariyer fuarları ve pazarları.
            </p>
          </div>
        </div>
        <div class="col-lg-4 col-md-6">
          <div class="activity-card h-100 p-4 text-center">
            <div class="activity-icon mb-3">
              <i class="fas fa-handshake fa-3x text-primary"></i>
            </div>
            <h3 class="h4 mb-3">Uluslararası İşbirliği</h3>
            <p class="text-muted">
              ISCB Öğrenci Konseyi aracılığıyla Türk topluluğu ile uluslararası meslektaşlar arasında köprüler kurmak.
            </p>
          </div>
        </div>
        <div class="col-lg-4 col-md-6">
          <div class="activity-card h-100 p-4 text-center">
            <div class="activity-icon mb-3">
              <i class="fas fa-book fa-3x text-primary"></i>
            </div>
            <h3 class="h4 mb-3">Eğitim Kaynakları</h3>
            <p class="text-muted">
              Hesaplamalı biyoloji topluluğu için eğitim materyalleri, araçlar ve kaynaklar sağlamak.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ISCB Affiliation Section -->
  <section class="iscb-affiliation py-5">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6">
          <h2 class="display-5 fw-bold mb-4">ISCB Öğrenci Konseyi Üyeliği</h2>
          <p class="lead mb-4">
            Uluslararası Hesaplamalı Biyoloji Derneği (ISCB) Öğrenci Konseyi üyesi olmaktan gurur duyuyoruz.
          </p>
          <p class="fs-5 mb-4">
            ISCB Öğrenci Konseyi, dünya çapında hesaplamalı biyoloji ve biyoinformatik alanlarında çalışan öğrenci ve doktora sonrası araştırmacılar arasında iletişim ve etkileşim için çerçeve sağlayan öğrenci odaklı bir organizasyondur.
          </p>
          <div class="iscb-benefits">
            <div class="benefit-item d-flex align-items-center mb-3">
              <i class="fas fa-check-circle text-primary me-3"></i>
              <span>Uluslararası konferans ve etkinliklere erişim</span>
            </div>
            <div class="benefit-item d-flex align-items-center mb-3">
              <i class="fas fa-check-circle text-primary me-3"></i>
              <span>Küresel araştırmacılarla ağ oluşturma fırsatları</span>
            </div>
            <div class="benefit-item d-flex align-items-center mb-3">
              <i class="fas fa-check-circle text-primary me-3"></i>
              <span>Eğitim kaynakları ve eğitim programları</span>
            </div>
            <div class="benefit-item d-flex align-items-center">
              <i class="fas fa-check-circle text-primary me-3"></i>
              <span>Diğer RSG'lerle işbirliği fırsatları</span>
            </div>
          </div>
        </div>
        <div class="col-lg-6 text-center">
          <div class="iscb-logo p-4">
            <i class="fas fa-globe-americas fa-5x text-primary mb-3"></i>
            <h4>ISCB Öğrenci Konseyi</h4>
            <p class="text-muted">Uluslararası Hesaplamalı Biyoloji Derneği</p>
            <a href="https://www.iscb.org/iscb-student-council" target="_blank" class="btn btn-outline-primary">
              ISCB Öğrenci Konseyi'ni Ziyaret Et
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Committees Section -->
  <section class="committees py-5 bg-light">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto text-center mb-5">
          <h2 class="display-5 fw-bold mb-4">{t('about.committees.title')}</h2>
          <p class="lead">
            {t('about.committees.subtitle')}
          </p>
        </div>
      </div>
      <div class="row">
        {committees.map((committee, index) => (
          <div class={index === 0 ? "col-12 mb-4" : "col-lg-6 mb-4"}>
            <CommitteeCard
              name={committee.name}
              description={committee.description}
              members={committee.members}
            />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Join Us Section -->
  <section class="join-us py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto text-center">
          <h2 class="display-5 fw-bold mb-4">{t('about.join.title')}</h2>
          <p class="lead mb-4">
            {t('about.join.description')}
          </p>
          <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
            <a href="/tr/join" class="btn btn-primary btn-lg px-4">{t('about.join.today')}</a>
            <a href="/tr/contact" class="btn btn-outline-primary btn-lg px-4">{t('about.join.getInTouch')}</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    background: var(--gradient-hero);
    min-height: 50vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    border-bottom: 1px solid var(--border-light);
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="0.5"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
    opacity: 0.3;
  }

  .hero .container {
    position: relative;
    z-index: 1;
  }

  .min-vh-50 {
    min-height: 50vh;
  }

  .about-page-image {
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
    transition: transform var(--transition-normal);
  }

  .about-page-image:hover {
    transform: scale(1.02);
  }

  .activity-card {
    background: var(--bg-elevated);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-md);
    transition: all var(--transition-normal);
    border: 1px solid var(--border-light);
    position: relative;
    overflow: hidden;
  }

  .activity-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--gradient-primary);
  }

  .activity-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-2xl);
  }

  .activity-icon {
    color: var(--primary-600);
    opacity: 0.8;
  }

  .iscb-logo {
    background: var(--bg-elevated);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-md);
    border: 1px solid var(--border-light);
  }

  .benefit-item {
    font-size: var(--font-size-lg);
  }

  .benefit-item i {
    color: var(--primary-600);
  }
</style> 