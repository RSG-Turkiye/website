---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/ui';

const lang = 'tr';
const t = useTranslations(lang);
const pageTitle = "Etkinlikler - RSG Türkiye";

const events = [
  {
    category: "Sempozyumlar",
    events: [
      {
        title: "Öğrenci Sempozyumu 2024",
        date: "2024",
        location: "Türkiye",
        description: "Hesaplamalı biyolojide araştırmacıları ve öğrencileri bir araya getiren yıllık öğrenci sempozyumu.",
        status: "completed",
        type: "symposium"
      },
      {
        title: "Öğrenci Sempozyumu 2023",
        date: "2023",
        location: "Türkiye",
        description: "Araştırma sunumları ve ağ oluşturma fırsatları içeren yıllık öğrenci sempozyumu.",
        status: "completed",
        type: "symposium"
      }
    ]
  },
  {
    category: "Atölye Çalışmaları",
    events: [
      {
        title: "Tek Hücre Atölyesi",
        date: "2024",
        location: "Türkiye",
        description: "Tek hücre analiz teknikleri ve metodolojileri üzerine uygulamalı atölye çalışması.",
        status: "completed",
        type: "workshop"
      },
      {
        title: "Yapısal Biyoloji Atölyesi",
        date: "2021",
        location: "Sanal",
        description: "Protein yapı belirleme ve moleküler docking içeren Hesaplamalı Yapısal Biyoloji Sanal Atölyesi'ne giriş.",
        status: "completed",
        type: "workshop"
      },
      {
        title: "COVID-19 Araştırma Atölyesi",
        date: "2020",
        location: "Sanal",
        description: "COVID-19 araştırması ve veri analizi için hesaplamalı yaklaşımlara odaklanan atölye çalışması.",
        status: "completed",
        type: "workshop"
      }
    ]
  },
  {
    category: "Yaklaşan Etkinlikler",
    events: [
      {
        title: "Yıllık Sempozyum 2025",
        date: "2025 TBD",
        location: "Türkiye",
        description: "Türkiye'deki hesaplamalı biyoloji topluluğunu bir araya getiren yıllık sempozyumumuz.",
        status: "upcoming",
        type: "symposium"
      },
      {
        title: "Biyoinformatik Araçları Atölyesi",
        date: "2025 TBD",
        location: "TBD",
        description: "Popüler biyoinformatik araçları ve pipeline'ları üzerine uygulamalı atölye çalışması.",
        status: "upcoming",
        type: "workshop"
      }
    ]
  }
];
---

<BaseLayout pageTitle={pageTitle}>
  <!-- Hero Section -->
  <section class="hero text-center py-5">
    <div class="container">
      <div class="row align-items-center min-vh-50">
        <div class="col-lg-8 mx-auto">
          <h1 class="display-3 fw-bold mb-4">{t('events.title')}</h1>
          <p class="lead fs-4">
            {t('events.subtitle')}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Events Overview Section -->
  <section class="events-overview py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto text-center mb-5">
          <h2 class="display-5 fw-bold mb-4">{t('events.overview.title')}</h2>
          <p class="lead">
            {t('events.overview.subtitle')}
          </p>
        </div>
      </div>
      <div class="row g-4">
        <div class="col-lg-4 col-md-6">
          <div class="event-type-card text-center p-4">
            <div class="event-icon mb-3">
              <i class="fas fa-graduation-cap fa-3x text-primary"></i>
            </div>
            <h3 class="h4 mb-3">{t('events.symposiums.title')}</h3>
            <p class="text-muted">
              {t('events.symposiums.description')}
            </p>
          </div>
        </div>
        <div class="col-lg-4 col-md-6">
          <div class="event-type-card text-center p-4">
            <div class="event-icon mb-3">
              <i class="fas fa-tools fa-3x text-primary"></i>
            </div>
            <h3 class="h4 mb-3">{t('events.workshops.title')}</h3>
            <p class="text-muted">
              {t('events.workshops.description')}
            </p>
          </div>
        </div>
        <div class="col-lg-4 col-md-6">
          <div class="event-type-card text-center p-4">
            <div class="event-icon mb-3">
              <i class="fas fa-users fa-3x text-primary"></i>
            </div>
            <h3 class="h4 mb-3">{t('events.networking.title')}</h3>
            <p class="text-muted">
              {t('events.networking.description')}
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Events by Category -->
  <section class="events-categories py-5 bg-light">
    <div class="container">
      {events.map((category) => (
        <div class="event-category mb-5">
          <div class="row">
            <div class="col-12">
              <h3 class="h2 mb-4 text-center">{category.category}</h3>
              <div class="row g-4">
                {category.events.map((event) => (
                  <div class="col-lg-6 col-md-12">
                    <div class="event-card h-100">
                      <div class="card h-100">
                        <div class="card-body">
                          <div class="d-flex justify-content-between align-items-start mb-3">
                            <span class={`badge ${event.status === 'upcoming' ? 'bg-accent' : 'bg-secondary'}`}>
                              {event.status === 'upcoming' ? t('events.status.upcoming') : t('events.status.completed')}
                            </span>
                            <span class={`badge ${event.type === 'symposium' ? 'bg-primary' : 'bg-info'}`}>
                              {event.type === 'symposium' ? t('events.type.symposium') : t('events.type.workshop')}
                            </span>
                          </div>
                          <h5 class="card-title mb-3">{event.title}</h5>
                          <div class="event-details mb-3">
                            <div class="d-flex align-items-center mb-2">
                              <i class="fas fa-calendar text-primary me-2"></i>
                              <span class="text-muted">{event.date}</span>
                            </div>
                            <div class="d-flex align-items-center">
                              <i class="fas fa-map-marker-alt text-primary me-2"></i>
                              <span class="text-muted">{event.location}</span>
                            </div>
                          </div>
                          <p class="card-text text-muted">{event.description}</p>
                          {event.status === 'upcoming' && (
                            <a href="/tr/contact" class="btn btn-primary btn-sm">{t('events.register')}</a>
                          )}
                        </div>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Featured Event: Structural Biology Workshop -->
  <section class="featured-event py-5">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6">
          <h2 class="display-5 fw-bold mb-4">Yapısal Biyoloji Atölyesi</h2>
          <p class="lead mb-4">
            Hesaplamalı Yapısal Biyoloji alanında protein yapı belirleme ve moleküler docking tekniklerini öğrenin.
          </p>
          <p class="fs-5 mb-4">
            Bu atölye çalışması, protein yapılarının belirlenmesi, moleküler docking ve yapısal biyoloji alanındaki en son gelişmeleri kapsar. Katılımcılar, gerçek dünya problemlerini çözmek için kullanılan araçları ve teknikleri uygulamalı olarak öğrenecekler.
          </p>
          <div class="workshop-features">
            <div class="feature-item d-flex align-items-center mb-3">
              <i class="fas fa-check-circle text-primary me-3"></i>
              <span>Protein yapı belirleme teknikleri</span>
            </div>
            <div class="feature-item d-flex align-items-center mb-3">
              <i class="fas fa-check-circle text-primary me-3"></i>
              <span>Moleküler docking metodolojileri</span>
            </div>
            <div class="feature-item d-flex align-items-center">
              <i class="fas fa-check-circle text-primary me-3"></i>
              <span>Yapısal biyoloji araçları</span>
            </div>
          </div>
        </div>
        <div class="col-lg-6 text-center">
          <div class="workshop-image p-4">
            <i class="fas fa-dna fa-5x text-primary mb-3"></i>
            <h4>Yapısal Biyoloji</h4>
            <p class="text-muted">Hesaplamalı Yaklaşımlar</p>
            <a href="/tr/contact" class="btn btn-outline-primary">
              <i class="fas fa-info-circle me-2"></i>Daha Fazla Bilgi
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="cta py-5 bg-primary">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto text-center">
          <h2 class="display-5 fw-bold mb-4">Etkinliklerimizde Yer Alın</h2>
          <p class="lead mb-4">
            Hesaplamalı biyoloji topluluğumuzun bir parçası olun ve gelecekteki etkinliklerimizden haberdar olun.
          </p>
          <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
            <a href="/tr/contact" class="btn btn-light btn-lg px-4">
              <i class="fas fa-envelope me-2"></i>İletişime Geç
            </a>
            <a href="/tr/join" class="btn btn-outline-light btn-lg px-4">
              <i class="fas fa-user-plus me-2"></i>Topluluğa Katıl
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    background: var(--gradient-hero);
    min-height: 50vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    border-bottom: 1px solid var(--border-light);
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="0.5"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
    opacity: 0.3;
  }

  .hero .container {
    position: relative;
    z-index: 1;
  }

  .min-vh-50 {
    min-height: 50vh;
  }

  .event-type-card {
    background: var(--bg-elevated);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-md);
    border: 1px solid var(--border-light);
    transition: all var(--transition-normal);
    height: 100%;
  }

  .event-type-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-2xl);
  }

  .event-icon {
    color: var(--primary-600);
  }

  .event-card {
    transition: transform var(--transition-normal);
  }

  .event-card:hover {
    transform: translateY(-4px);
  }

  .workshop-image {
    background: var(--bg-elevated);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-md);
    border: 1px solid var(--border-light);
  }

  .feature-item {
    font-size: var(--font-size-lg);
  }

  .feature-item i {
    color: var(--primary-600);
  }
</style> 