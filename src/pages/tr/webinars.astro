---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/ui';

const lang = 'tr';
const t = useTranslations(lang);
const pageTitle = "Webinarlar - RSG Türkiye";

const webinars = [
  {
    year: "2025",
    title: "2025 Webinarları",
    description: "2025 için yaklaşan webinarlar",
    webinars: [
      {
        title: "Açık Öğrenci Webinarları",
        presenter: "Öğrenci Sunucuları",
        date: "Aylık",
        description: "Öğrenci liderliğinde araştırma sunumları ve tartışmalar",
        status: "upcoming"
      }
    ]
  },
  {
    year: "2024",
    title: "2024 Webinarları",
    description: "2024'ten webinarlar",
    webinars: [
      {
        title: "Daha İyi İlaç Tasarımı için Hastalık Mekanizmasını Anlama",
        presenter: "Dr. Ayesha Fatima",
        date: "2024",
        description: "Dr. Fatima meslek olarak eczacıdır. Pakistan, Lahor'daki Punjab Üniversitesi'nden mezun oldu, M.Sc ve doktora için Malezya'ya gitti.",
        status: "completed"
      },
      {
        title: "Dil Modelleri Proteinlerin Karmaşık Fonksiyonel Özelliklerini Öğrenebilir",
        presenter: "Serbülent Ünsal",
        date: "2024",
        description: "Serbülent Ünsal, Türkiye'deki Karadeniz Teknik Üniversitesi'nden İstatistik ve Bilgisayar Bilimleri alanında B.Sc derecesi aldı.",
        status: "completed"
      }
    ]
  },
  {
    year: "2023",
    title: "2023 Webinarları",
    description: "2023'ten webinarlar",
    webinars: [
      {
        title: "Protein-RNA Etkileşimlerindeki Hesaplamalı Zorluklar",
        presenter: "Doç. Dr. Yaron Orenstein",
        date: "2023",
        description: "Yaron Orenstein, Ben-Gurion Üniversitesi Elektrik ve Bilgisayar Mühendisliği Okulu'nda Kıdemli Öğretim Üyesi ve Hesaplamalı Biyoloji laboratuvarının başkanıdır.",
        status: "completed"
      }
    ]
  },
  {
    year: "2022",
    title: "2022 Webinarları",
    description: "2022'den webinarlar",
    webinars: [
      {
        title: "Bilgisayar Ortamında Deney Olarak Moleküler Simülasyonlar",
        presenter: "Seyit Kale",
        date: "2022",
        description: "Seyit Kale, 2006'da İhsan Doğramacı Bilkent Üniversitesi'nden Fizik alanında Lisans derecesi aldı ve 2012'de Brandeis Üniversitesi'nden Biyofizik ve Yapısal Biyoloji alanında doktora derecesi aldı.",
        status: "completed"
      }
    ]
  }
];
---

<BaseLayout pageTitle={pageTitle}>
  <!-- Hero Section -->
  <section class="hero text-center py-5">
    <div class="container">
      <div class="row align-items-center min-vh-50">
        <div class="col-lg-8 mx-auto">
          <h1 class="display-3 fw-bold mb-4">{t('webinars.title')}</h1>
          <p class="lead fs-4">
            {t('webinars.subtitle')}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Bioinfonet Project Section -->
  <section class="bioinfonet py-5">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6">
          <h2 class="display-5 fw-bold mb-4">{t('webinars.bioinfonet.title')}</h2>
          <p class="lead mb-4">
            {t('webinars.bioinfonet.description')}
          </p>
          <p class="fs-5 mb-4">
            {t('webinars.bioinfonet.detail')}
          </p>
          <div class="project-features">
            <div class="feature-item d-flex align-items-center mb-3">
              <i class="fas fa-globe fa-2x text-primary me-3"></i>
              <div>
                <h5 class="mb-1">{t('webinars.features.global.title')}</h5>
                <p class="text-muted mb-0">{t('webinars.features.global.description')}</p>
              </div>
            </div>
            <div class="feature-item d-flex align-items-center mb-3">
              <i class="fas fa-graduation-cap fa-2x text-primary me-3"></i>
              <div>
                <h5 class="mb-1">{t('webinars.features.expert.title')}</h5>
                <p class="text-muted mb-0">{t('webinars.features.expert.description')}</p>
              </div>
            </div>
            <div class="feature-item d-flex align-items-center">
              <i class="fas fa-users fa-2x text-primary me-3"></i>
              <div>
                <h5 class="mb-1">{t('webinars.features.interactive.title')}</h5>
                <p class="text-muted mb-0">{t('webinars.features.interactive.description')}</p>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-6 text-center">
          <div class="bioinfonet-logo p-4">
            <i class="fas fa-video fa-5x text-primary mb-3"></i>
            <h4>Bioinfonet</h4>
            <p class="text-muted">ISCB Öğrenci Konseyi Destekli Proje</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Webinar Years Section -->
  <section class="webinar-years py-5 bg-light">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto text-center mb-5">
          <h2 class="display-5 fw-bold mb-4">{t('webinars.schedule.title')}</h2>
          <p class="lead">
            {t('webinars.schedule.subtitle')}
          </p>
        </div>
      </div>
      
      {webinars.map((yearGroup) => (
        <div class="webinar-year mb-5">
          <div class="row">
            <div class="col-12">
              <h3 class="h2 mb-4 text-center">{yearGroup.title}</h3>
              <div class="row g-4">
                {yearGroup.webinars.map((webinar) => (
                  <div class="col-lg-6 col-md-12">
                    <div class="webinar-card h-100">
                      <div class="card h-100">
                        <div class="card-body">
                          <div class="d-flex justify-content-between align-items-start mb-3">
                            <span class={`badge ${webinar.status === 'upcoming' ? 'bg-accent' : 'bg-secondary'}`}>
                              {webinar.status === 'upcoming' ? t('webinars.status.upcoming') : t('webinars.status.completed')}
                            </span>
                            <small class="text-muted">{webinar.date}</small>
                          </div>
                          <h5 class="card-title mb-3">{webinar.title}</h5>
                          {webinar.presenter && (
                            <p class="text-primary fw-bold mb-2">
                              <i class="fas fa-user me-2"></i>{t('webinars.presenter')}: {webinar.presenter}
                            </p>
                          )}
                          <p class="card-text text-muted">{webinar.description}</p>
                          {webinar.status === 'upcoming' && (
                            <a href="/tr/contact" class="btn btn-primary btn-sm">{t('webinars.register')}</a>
                          )}
                        </div>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Open Student Webinars Section -->
  <section class="open-student-webinars py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto text-center">
          <h2 class="display-5 fw-bold mb-4">Açık Öğrenci Webinarları</h2>
          <p class="lead mb-4">
            Türk hesaplamalı biyoloji topluluğundan araştırma sunumları ve tartışmaları içeren öğrenci liderliğindeki webinar serimiz.
          </p>
          <div class="row g-4 mt-4">
            <div class="col-lg-4 col-md-6">
              <div class="feature-card text-center p-4">
                <div class="feature-icon mb-3">
                  <i class="fas fa-microscope fa-3x text-primary"></i>
                </div>
                <h4 class="h5 mb-3">Araştırma Sunumları</h4>
                <p class="text-muted">
                  Öğrencilerimizin en son araştırma bulgularını paylaştığı oturumlar.
                </p>
              </div>
            </div>
            <div class="col-lg-4 col-md-6">
              <div class="feature-card text-center p-4">
                <div class="feature-icon mb-3">
                  <i class="fas fa-comments fa-3x text-primary"></i>
                </div>
                <h4 class="h5 mb-3">İnteraktif Tartışmalar</h4>
                <p class="text-muted">
                  Sunumlar sonrası soru-cevap ve tartışma oturumları.
                </p>
              </div>
            </div>
            <div class="col-lg-4 col-md-6">
              <div class="feature-card text-center p-4">
                <div class="feature-icon mb-3">
                  <i class="fas fa-network-wired fa-3x text-primary"></i>
                </div>
                <h4 class="h5 mb-3">Ağ Oluşturma</h4>
                <p class="text-muted">
                  Öğrenciler arasında işbirliği ve bağlantı kurma fırsatları.
                </p>
              </div>
            </div>
          </div>
          <div class="mt-5">
            <a href="/tr/contact" class="btn btn-primary btn-lg px-4">
              <i class="fas fa-envelope me-2"></i>Katılım İsteği Gönder
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    background: var(--gradient-hero);
    min-height: 50vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    border-bottom: 1px solid var(--border-light);
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="0.5"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
    opacity: 0.3;
  }

  .hero .container {
    position: relative;
    z-index: 1;
  }

  .min-vh-50 {
    min-height: 50vh;
  }

  .bioinfonet-logo {
    background: var(--bg-elevated);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-md);
    border: 1px solid var(--border-light);
  }

  .webinar-card {
    transition: transform var(--transition-normal);
  }

  .webinar-card:hover {
    transform: translateY(-4px);
  }

  .feature-card {
    background: var(--bg-elevated);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    border: 1px solid var(--border-light);
    transition: all var(--transition-normal);
  }

  .feature-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .feature-icon {
    color: var(--primary-600);
  }
</style> 