---
// Language switcher component
---

<button class="language-toggle" id="languageToggle" aria-label="Toggle language">
  <div class="flag-container">
    <img src="/flags/en.svg" alt="English" class="flag flag-en" />
    <img src="/flags/tr.svg" alt="Turkish" class="flag flag-tr" />
  </div>
</button>

<script>
  // Language switching functionality
  function initLanguageToggle() {
    const languageToggle = document.getElementById('languageToggle');
    if (!languageToggle) return;

    // Get current language from localStorage or default to 'en'
    const currentLang = localStorage.getItem('language') || 'en';
    document.documentElement.setAttribute('data-lang', currentLang);

    languageToggle.addEventListener('click', () => {
      const currentLang = document.documentElement.getAttribute('data-lang') || 'en';
      const newLang = currentLang === 'en' ? 'tr' : 'en';
      
      // Update the data attribute
      document.documentElement.setAttribute('data-lang', newLang);
      
      // Save to localStorage
      localStorage.setItem('language', newLang);
      
      // Redirect to the appropriate language-specific URL
      const currentPath = window.location.pathname;
      let newPath;
      
      if (newLang === 'tr') {
        // Switch to Turkish
        if (currentPath === '/') {
          newPath = '/tr';
        } else if (currentPath.startsWith('/tr/')) {
          newPath = currentPath; // Already Turkish
        } else {
          newPath = '/tr' + currentPath;
        }
      } else {
        // Switch to English
        if (currentPath === '/tr') {
          newPath = '/';
        } else if (currentPath.startsWith('/tr/')) {
          newPath = currentPath.replace('/tr', '');
        } else {
          newPath = currentPath; // Already English
        }
      }
      
      // Navigate to the new URL
      window.location.href = newPath;
    });
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', initLanguageToggle);
</script>

<style>
  .language-toggle {
    background: var(--bg-elevated);
    border: 2px solid var(--border-light);
    border-radius: var(--radius-full);
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all var(--transition-normal);
    color: var(--text-secondary);
    position: relative;
    overflow: hidden;
    margin-left: 8px;
  }

  .language-toggle:hover {
    background: var(--bg-tertiary);
    border-color: var(--border-medium);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .language-toggle::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(99, 102, 241, 0.1), transparent);
    transition: left var(--transition-slow);
  }

  .language-toggle:hover::before {
    left: 100%;
  }

  .flag-container {
    position: relative;
    width: 24px;
    height: 16px;
  }

  .flag {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 2px;
    transition: opacity var(--transition-fast);
  }

  .flag-en {
    opacity: 1;
  }

  .flag-tr {
    opacity: 0;
  }

  /* Show Turkish flag when Turkish is active */
  [data-lang="tr"] .flag-en {
    opacity: 0;
  }

  [data-lang="tr"] .flag-tr {
    opacity: 1;
  }

  /* Light theme adjustments */
  [data-theme="light"] .language-toggle {
    background: var(--bg-elevated);
    border: 2px solid var(--border-light);
    color: var(--text-secondary);
  }

  [data-theme="light"] .language-toggle:hover {
    background: var(--bg-tertiary);
    border-color: var(--border-medium);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }
</style> 